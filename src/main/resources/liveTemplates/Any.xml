<templateSet group="Any">
    <template name="slugify"
              value="$TEXT$"
              description="SDK: Convert to slug"
              toReformat="true"
              toShortenFQNames="false">
        <variable name="TEXT" expression="slugify(SELECTION)" defaultValue="the_quick_brown_fox" alwaysStopAt="true"/>
        <context>
            <option name="HTML" value="true"/>
            <option name="VUE_TEMPLATE" value="true"/>
        </context>
    </template>
</templateSet>